{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "outDir": "lib",
    "checkJs": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": [
      "node",
      "webgl2"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src"
  ]
}
